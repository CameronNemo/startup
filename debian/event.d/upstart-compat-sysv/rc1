# rc1 - runlevel 1 compatibility
#
# This task runs the old sysv-rc runlevel 1 ("single-user") scripts. 

start on maintenance

# rc events are exclusive
stop on rcS/start
stop on rc0-halt/start
stop on rc0-poweroff/start
stop on rc2/start
stop on rc3/start
stop on rc4/start
stop on rc5/start
stop on rc6/start

script
	set $(runlevel --set 1 || true)
	if [ "$1" != "unknown" ]; then
	    PREVLEVEL=$1
	    RUNLEVEL=$2
	    export PREVLEVEL RUNLEVEL
	fi

	exec /etc/init.d/rc 1
end script
