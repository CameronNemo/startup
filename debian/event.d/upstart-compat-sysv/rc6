# rc6 - runlevel 6 compatibility
#
# This task runs the old sysv-rc runlevel 6 ("reboot") scripts.

start on reboot
start on runlevel-6

stop on shutdown
stop on runlevel-2
stop on runlevel-3
stop on runlevel-4
stop on runlevel-5

script
	set $(runlevel --set 6 || true)
	if [ "$1" != "unknown" ]; then
	    PREVLEVEL=$1
	    RUNLEVEL=$2
	    export PREVLEVEL RUNLEVEL
	fi

	exec /etc/init.d/rc 6
end script
