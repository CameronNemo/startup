# rcS-sulogin - "single-user" runlevel compatibility
#
# This task runs the sulogin binary during "single-user" mode.

start on runlevel-S

stop on shutdown
stop on runlevel-2
stop on runlevel-3
stop on runlevel-4
stop on runlevel-5

respawn /sbin/sulogin
console owner

start script
        echo
        echo "Run 'telinit' or 'shutdown' when finished."
end script
