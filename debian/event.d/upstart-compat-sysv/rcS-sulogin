# rcS-sulogin - "single-user" runlevel compatibility
#
# This task runs the sulogin binary during "single-user" mode.

start on runlevel-S

stop on shutdown
stop on runlevel-2
stop on runlevel-3
stop on runlevel-4
stop on runlevel-5

console owner

script
	runlevel --set S >/dev/null || true
	/sbin/sulogin
	start rc-default 2>/dev/null
end script
